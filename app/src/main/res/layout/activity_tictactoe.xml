<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TictactoeActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Player1"
        android:text="Player One"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player1score"
        android:text="0"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/Player1"
        app:layout_constraintLeft_toLeftOf="@+id/Player1"
        android:layout_marginLeft="40dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Player2"
        android:text="Player Two"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player2score"
        android:text="0"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/Player2"
        app:layout_constraintRight_toRightOf="@+id/Player2"
        android:layout_marginRight="40dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/playerstatus"

        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/player1score"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:layout_width="125dp"
        android:layout_height="135dp"
        android:textSize="60sp"
        android:id="@+id/btn_0"

        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/playerstatus"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        />

    <Button
        android:layout_width="125dp"
        android:layout_height="135dp"
        android:textSize="60sp"
        android:id="@+id/btn_1"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/btn_0"
        app:layout_constraintLeft_toRightOf="@id/btn_0"

        />
    <Button
        android:layout_width="125dp"
        android:layout_height="135dp"
        android:textSize="60sp"
        android:id="@+id/btn_2"

        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/btn_1"
        app:layout_constraintLeft_toRightOf="@id/btn_1"
        android:layout_marginLeft="10dp"


        />
    <Button
        android:layout_width="125dp"
        android:layout_height="135dp"
        android:textSize="60sp"
        android:id="@+id/btn_3"

        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/btn_0"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"

        />

    <Button
        android:layout_width="125dp"
        android:layout_height="135dp"
        android:textSize="60sp"
        android:id="@+id/btn_4"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/btn_1"
        app:layout_constraintLeft_toRightOf="@id/btn_3"

        />
    <Button
        android:layout_width="125dp"
        android:layout_height="135dp"
        android:textSize="60sp"
        android:id="@+id/btn_5"

        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/btn_2"
        app:layout_constraintLeft_toRightOf="@id/btn_4"
        android:layout_marginLeft="10dp"


        />
    <Button
        android:layout_width="125dp"
        android:layout_height="135dp"
        android:textSize="60sp"
        android:id="@+id/btn_6"

        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/btn_4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"

        />

    <Button
        android:layout_width="125dp"
        android:layout_height="135dp"
        android:textSize="60sp"
        android:id="@+id/btn_7"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/btn_4"
        app:layout_constraintLeft_toRightOf="@id/btn_6"

        />
    <Button
        android:layout_width="125dp"
        android:layout_height="135dp"
        android:textSize="60sp"
        android:id="@+id/btn_8"

        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/btn_5"
        app:layout_constraintLeft_toRightOf="@id/btn_7"
        android:layout_marginLeft="10dp"


        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:id="@+id/restart"
        android:text="Restart"
        android:textStyle="bold"
        android:backgroundTint="#412F93"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/btn_6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"


        />


</androidx.constraintlayout.widget.ConstraintLayout>